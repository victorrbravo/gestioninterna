<operation  name="Modificar_solicitud_vacaciones"  desc="Modificar un proyecto poa existente" icon="firmadoc.png" action= ""
postaction="correovacaciones" >
	<command id ="1" type="actualizar" table="vacaciones">
		<fields>
			<field type="combolisttable" 
			options="id:vacaciones:where usuario='_USERNAME' and status='iniciado'::'(' || id || ') ' || nombre || '-' || usuario " mandatory="yes" 
			title="Periodo_vacacional"   changekey="yes" primarykey="yes" >
				id
			</field>

			<field type="datetime" mandatory="yes"  function="now()" format="time_t" input="no" >
				fechasolicitud
			</field>

		<field type="string" mandatory="no" options="readonly" changefor="id" title="usuario" position="open_and_close,md-4"  >
                 usuario
            </field>

			<field type="string" icon="resumen.png" format="time_t" mandatory="no" options="readonly" changefor="id" title="nombre" position="open,md-4">
                                nombre
                        </field>
			
			<field type="string" mandatory="no" title="Cédula" options="readonly,wiki" changefor="id" position="close,md-6">
                                id_cedula
                        </field>

			<field type="string" icon="resumen.png" mandatory="yes" validation=".*" title="Dias_a_disfrutar" 
position="open_and_close,md-6" options="readonly" changefor="id">
				diasadisfrutar
			</field>

			<field type="string" icon="resumen.png" mandatory="yes" validation="" title="Dias_disfrutados" options="readonly" changefor="id" position="open_and_close,md-6">
				diasdisfrutados
			</field>

			<field type="string" icon="resumen.png" mandatory="yes" validation=".*" title="Dias_por_disfrutar" options="readonly" changefor="id">
				diaspordisfrutar
			</field>

			<field type="datetime" icon="resumen.png" mandatory="yes" options="calendarPopup::true" position="open,md-6"  title="fecha_de_inicio"  format="time_t">
				fechainicio
			</field>

			<field type="string" icon="resumen.png" mandatory="yes" primarykey="no" title="dias_solicitados" position="close,md-6"  changekey="yes" validation="validatefunction:CASE WHEN {#diasdisfrutados}=0 THEN {#diassolicitados} >= ({#diaspordisfrutar}/2+1) AND {#diaspordisfrutar} >= {#diassolicitados}  ELSE {#diaspordisfrutar} = {#diassolicitados} END" >
				diassolicitados
			</field>


			<field type="datetime" mandatory="no" 
			
			options="calendarPopup::true,displayFormat::dd/MM/yy,beforefunction:bdays({#fecha_de_inicio};{#dias_solicitados})"  
			title="Fecha_final_periodo_hasta" format="time_t" validation="" changefor="dias_solicitados" position="open,md-6">
				fechafin
			</field>

			<field type="datetime" icon="resumen.png" mandatory="yes" 
			options="calendarPopup::true,displayFormat::dd/MM/yy,beforefunction:bdays({#fecha_de_inicio};{#dias_solicitados}+1)"  title="fecha_de_incorporación" 
			primarykey="no" format="time_t" changefor="dias_solicitados" position="close,md-6">
				fechaincorporacion
			</field>

			<field type="combolisttable" icon="resumen.png" mandatory="yes" validation=".*" title="Suplente_interno_1" options="cedula:personal::nombres ||' '|| apellidos || ' (Cedula ' || cedula || ') '">
				cedula_suplente_1
			</field>

			 <field type="combolisttable" icon="resumen.png" mandatory="no" validation=".*" title="Suplente_interno_2" options="cedula:personal:where usuario!='_USERNAME'::nombres ||' '|| apellidos || ' (Cedula ' || cedula || ') '">
                                cedula_suplente_2
                        </field>
			 <field title="Desarrollo" desc="Activo" validation="" position="open,md-6" options="type::checkbox,Sí::true" icon="resumen.png" type="string" mandatory="no">
			      enviar_desarrollo
			  </field>
			 <field title="Investigación" desc="Activo" validation="" position="close,md-6" options="type::checkbox,Sí::true" icon="resumen.png" type="string" mandatory="no">
			      enviar_investigacion
			  </field>
		      <field title="Apropiación" desc="Activo" validation="" position="open,md-6" options="type::checkbox,Si::true" icon="resumen.png" type="string" mandatory="no">
			      enviar_apropiacion
			  </field>
		      <field title="Reflexión" desc="Activo" validation="" position="close,md-6" options="type::checkbox,Si::True" icon="resumen.png" type="string" mandatory="no">
			      enviar_reflexion
			  </field>



			<field type="string" literal="Talento_humano" mandatory="yes" title="Estatus">
				status                                
			</field>

			<field type="string" mandatory="yes" function="'( ' || cedula || ' ) ' || nombres ||' '|| apellidos || ' fecha ingreso ' || to_timestamp(fecha_ingreso)::date from personal where usuario='_USERNAME'" input="no" title="Informacion_usuario">
				informacion_usuario
			</field>
			
		</fields>
	</command>
	 <command id ="1" type="agregar" table="vacaciones_registro" >
                <fields>	
			<field  type="agregar" sequence="vacaciones_registro_id_seq" title="Solicitud_registro" typesequence="next">
                                id
                        </field>

                        <field type="datetime" mandatory="yes"  function="now()" format="time_t" input="no">
                                fecha_accion
                        </field>
                        <field type="string" literal="_USERNAME" mandatory="yes" >
                                propietario
                        </field>

			 <field type="number" mandatory="yes" primarykey="yes" title="Periodo_vacacional">
                                id_vacaciones
                        </field>
                        <field type="string" mandatory="no" primarykey="no" title="Informacion_usuario" >
				informacion_usuario
                        </field>
			<field type="datetime" mandatory="no" format="time_t" title="fechainicio">
                                fechainicio
                        </field>
			<field type="datetime" mandatory="no"  format="time_t" title="Fecha_final_periodo_hasta">
                                fechafin
                        </field>

			<field type="number" mandatory="yes" title="nombre">
                                nombre_periodo
                        </field>

			 <field type="string" literal="Talento_humano" mandatory="yes" title="Estatus">
                                status
                        </field>

                </fields>
        </command>

	<command id ="1" type="agregar" table="vacaciones">
                <fields>

                        <field  type="agregar" sequence="vacaciones_id_seq" title="id">
                                id
                        </field>
                        <field type="number" mandatory="yes" title="Cédula">
                                id_cedula
                        </field>

                         <field type="string" mandatory="no" title="usuario" >
                                usuario
                        </field>

                        <field type="string" format="integer"  mandatory="yes" 
			function="case when sum(diassolicitados) = diasadisfrutar then (nombre+1) else nombre end from vacaciones where usuario = '{#usuario}' and nombre = {#nombre} GROUP BY diasadisfrutar,nombre limit 1" title="nombre" >
                                nombre
                        </field>
                        <field type="string" format="integer"   mandatory="yes" function="case when sum(diassolicitados) = diasadisfrutar then (diasadisfrutar+1) else diasadisfrutar end from vacaciones where usuario = '{#usuario}' and nombre = {#nombre} GROUP BY diasadisfrutar limit 1" title="Dias_a_disfrutar" >
                                diasadisfrutar
                        </field>
                        <field type="string" format="integer" function="case when sum(diassolicitados) = diasadisfrutar then (0) else (sum(diassolicitados)) end from vacaciones where usuario = '{#usuario}' and nombre = {#nombre} GROUP BY diasadisfrutar limit 1" title="Dias_disfrutado" >
                                diasdisfrutados
                        </field>
                        <field type="string" format="integer" function="case when sum(diassolicitados) = diasadisfrutar then (diasadisfrutar+1) else (diasadisfrutar-sum(diassolicitados)) end from vacaciones where usuario = '{#usuario}' and nombre = {#nombre} GROUP BY diasadisfrutar limit 1" title="Dias_por_disfrutar" >
                                diaspordisfrutar
                        </field>
			<field type="string" format="integer" function="extract(epoch from now()+'10 day')::int" title="fecha_inicio" >
                                fechainicio
                        </field>
			<field type="string" format="integer" function="extract(epoch from now()+'15 day')::int" title="fecha_fin" >
                                fechafin
                        </field>			
                        <field type="string" mandatory="yes" literal="iniciado">
                                status
                        </field>
		</fields>
        </command>

</operation>
